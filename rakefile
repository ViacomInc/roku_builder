require 'rake'
require 'rake/testtask'

Rake::TestTask.new do |t|
  t.test_files = Dir.glob('test/roku_builder/**/test_*.rb')
end

Rake::TestTask.new(:intergration) do |t|
  t.test_files = Dir.glob('intergration/roku_builder/**/test_*.rb')
end

task(default: :test)
